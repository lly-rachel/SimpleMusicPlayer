<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"

    android:background="@color/colorBlue"
    app:contentPadding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/colorBlue"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/item_music_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/item_music_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_music_number"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/item_music_song"
            android:layout_alignLeft="@id/item_music_song"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:textColor="#888"
            />

        <TextView
            android:id="@+id/item_music_line"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:background="#888"
            android:layout_below="@+id/item_music_song"
            android:layout_toRightOf="@+id/item_music_singer"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/item_music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888"
            android:textSize="16dp"
            android:layout_below="@+id/item_music_song"
            android:layout_toRightOf="@+id/item_music_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/item_music_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_music_singer"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#888"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>